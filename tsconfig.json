{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h",
        "lib": ["es6", "dom"]
    },
    "include": ["preact/**/*.tsx", "platformScripts/**/*.ts"],
    "exclude": ["preact/index.js"]
}
