    },
    "homepage": "https://github.com/bmitchinson/Playlists",
    "dependencies": {
        "@google-cloud/firestore": "^2.2.4",
        "dotenv": "^8.0.0",
        "preact": "^8.2.6",
        "preact-compat": "^3.17.0",
        "preact-render-to-string": "^4.1.0",
        "preact-router": "^2.5.7",
        "spotify-web-api-node": "^4.0.0",
        "tidal-api-wrapper": "^1.7.0"
